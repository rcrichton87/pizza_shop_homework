<% @pizzas.each do |pizza| %>
  <p>Name: <%= pizza.pretty_name() %></p>
  <p>Order: <%= pizza.quantity %> x <%= pizza.topping %></p>
  <p><a href="/pizzas/<%= pizza.id %>">Show Order</a></p> <!-- puts the id into the link, taking each to their appropriate order page -->

  <hr/> <!-- horizontal rule, a line across the screen -->
<% end %>